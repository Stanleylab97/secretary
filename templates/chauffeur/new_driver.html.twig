{% extends 'base.html.twig' %}

{% block title %}Chauffeur!{% endblock %}

{% block body %}
<!-- Forms Components Header -->
                        <div class="content-header">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="header-section">
                                        <h1>Enregistrement de chauffeur</h1>
                                    </div>
                                </div>
                                <div class="col-sm-6 hidden-xs">
                                    <div class="header-section">
                                        <ul class="breadcrumb breadcrumb-top">
                                            <li>Formulaire</li>
                                            <li>Chauffeur</li>
                                            <li><a href="">Création</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END Forms Components Header -->
<div class="row">
    <div class="col-xs-6">
      {{ form(form)}}
    </div>
    <div class="col-xs-6">
    <!-- Datatables Block -->
                        <!-- Datatables is initialized in js/pages/uiTables.js -->
                        <div class="block full">
                            <div class="block-title">
                                <h2>Datatables</h2>
                            </div>
                            <div class="table-responsive">
                                <table id="example-datatable" class="table table-striped table-bordered table-vcenter">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom et prénoms</th>
                                            <th>Catégorie permis</th>
                                            <th>Contact</th>
                                            <th class="text-center" style="width: 75px;"><i class="fa fa-flash"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for driver in drivers %}
                                        <tr>
                                           
                                            <td><strong>{{ driver.id}}</strong></td>
                                            <td>{{ driver.nom}}</td>
                                            <td>{{ driver.permis}}</td>
                                            <td>{{ driver.contacts}}</td>
                                            <td class="text-center">
                                                <a href="javascript:void(0)" data-toggle="tooltip" title="Edit User" class="btn btn-effect-ripple btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END Datatables Block -->
    </div>
</div
{% endblock %}

{% block javascripts %}
    <!-- Load and execute javascript code used only in this page -->
        <script src="{{ asset('js/pages/uiTables.js')}}"></script>
        <script>$(function(){ UiTables.init(); });</script>
{% endblock %}
