{% extends 'base.html.twig' %}

{% block title %}Hello AgentController!{% endblock %}

{% block body %}

<!-- Forms Components Header -->
                        <div class="content-header">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="header-section">
                                        <h1>Enregistrement d'agent</h1>
                                    </div>
                                </div>
                                <div class="col-sm-6 hidden-xs">
                                    <div class="header-section">
                                        <ul class="breadcrumb breadcrumb-top">
                                            <li>Formulaire</li>
                                            <li>Agent</li>
                                            <li><a href="">Création</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END Forms Components Header -->
<div class="row">
    <div class="col-xs-6">
      {{ form(form)}}
    </div>
    <div class="col-xs-6">
    <!-- Datatables Block -->
                        <!-- Datatables is initialized in js/pages/uiTables.js -->
                        <div class="block full">
                            <div class="block-title">
                                <h2>Datatables</h2>
                            </div>
                            <div class="table-responsive">
                                <table id="example-datatable" class="table table-striped table-bordered table-vcenter">
                                    <thead>
                                        <tr>
                                            <th>Nom et prénoms</th>
                                            <th>Direction</th>
                                            <th style="width: 120px;">Service</th>
                                            <th style="width: 120px;">Fonction</th>
                                            <th class="text-center" style="width: 75px;"><i class="fa fa-flash"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for agent in agents %}
                                        <tr>
                                           
                                            <td><strong>{{ agent.nom}}</strong></td>
                                            <td>{{ agent.service.direction.code}}</td>
                                            <td>{{ agent.service.libelle}}</td>
                                            <td>{{ agent.fonction}}</td>
                                            <td class="text-center">
                                                <a href="javascript:void(0)" data-toggle="tooltip" title="Edit User" class="btn btn-effect-ripple btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END Datatables Block -->
    </div>
</div
                        
{% endblock %}
