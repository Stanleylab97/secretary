{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Approvisionnement{% endblock %}


{% block body %}

 <!-- Forms Components Header -->
<div class="content-header">
    <div class="row">
            <div class="col-sm-6">
                                    <div class="header-section">
                                        <h1>Approvisionnement de matériel</h1>
                                    </div>
            </div>
             <div class="col-sm-6 hidden-xs">
                                    <div class="header-section">
                                        <ul class="breadcrumb breadcrumb-top">
                                            <li>Formulaire</li>
                                            <li>Missions</li>
                                            <li><a href="">Création</a></li>
                                        </ul>
                                    </div>
           </div>
    </div>
</div>
                        <!-- END Forms Components Header -->

<div class="row">
    
                                    <div class="block"> 
                                        <!-- Flexible Grid Title -->
                                        <div class="block-title">
                                            <div class="block-options pull-right">
                                                <a href="javascript:void(0)" class="btn btn-effect-ripple btn-default  enable-tooltip" data-toggle="button" title="Toggles .form-bordered class">Borderless</a>
                                            </div>
                                            <h2>Veuillez remplir le formulaire</h2>
                                        </div>
                                        <!-- END Flexible Grid Title -->

                                        <!-- Flexible Grid Content -->
                                            {{ form_start(form) }}
                                              
                                             
                                              <div class="row">
                                               
                                                <div class="col-xs-5">{{form_row( form.materiel) }} </div>

                                                <div class="col-xs-3">{{form_row(form.qte,{attr:{'placeholder': 'Ex: 1'}}) }} </div>
                                              
                                                <div class="col-xs-4"><br> <button type="submit" class="btn btn-success">Réceptionner matériel</button>  </div>
                                              </div> 
                                                       
                                             
                                            {{ form_end(form) }}
                                        <!-- END Flexible Grid Content -->
                                    </div>

        
                              
    </div>
    <div class="row">
        <!-- Datatables Block -->
                        <!-- Datatables is initialized in js/pages/uiTables.js -->
                        <div class="block full">
                            <div class="block-title">
                                <h2>Régistre des approvisionnements</h2>
                            </div>
                            <div class="table-responsive">
                                <table id="example-datatable" class="table table-striped table-bordered table-vcenter">
                                    <thead>
                                        <tr>
                                            <th>Date </th>
                                            
                                            <th>Matériel</th>
                                            
                                            <th>Qte</th>

                                            <th>Receptionné par</th>
                                            <th class="text-center" style="width: 50px;"><i class="fa fa-flash"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for appro in appros %}
                                        <tr>
                                           
                                            <td>{{ appro.dateAppro|date("d/m/Y")}}</td>
                                            
                                            <td>{{ appro.materiel.libelle}}</td>
                                           
                                            <td>{{ appro.qte}}</td>

                                            <td>{{ appro.receivedBy}}</td>
                                            <td class="text-center">
                                                <a href="{{ path('edit_appro',{id: appro.id}) }}" data-toggle="tooltip" title="Consulter/Editer" class="btn btn-effect-ripple btn-xs btn-success"><i class="fa fa-pencil"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
         <!-- END Datatables Block -->
 
</div
{% endblock %}

{% block javascripts %}
    <!-- Load and execute javascript code used only in this page -->
        <script src="{{asset('js/pages/uiTables.js')}}"></script>
        <script>$(function(){ UiTables.init(); });</script>
{% endblock %}

